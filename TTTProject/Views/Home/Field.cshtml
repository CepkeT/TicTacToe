@model GameDataModel;
@using TTTProject.HtmlHelpers
<style>
    .cell {
        width: 32px;
        height: 32px;
        border: 1px solid black;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cell button {
        width: 100%;
        height: 100%;
        margin: 0;
        border: none;
        padding: 0;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(3, 32px);
        justify-content: center;
        align-items: center;
    }
</style>

<div class="grid">
    @for (var cellIndex = 0; cellIndex < 9; cellIndex++)
    {
        <div class="cell">
            @Html.ShowCell(Model, cellIndex)
        </div>
    }
</div>